</div>




<script>
    $(document).ready(
      function() {
          $('#contact_form').bootstrapValidator({
              // To use feedback icons, ensure that you use Bootstrap v3.1.0 or later
              feedbackIcons: {
                  valid: 'glyphicon glyphicon-ok',
                  invalid: 'glyphicon glyphicon-remove',
                  validating: 'glyphicon glyphicon-refresh'
              },
              fields: {
                  first_name: {
                      validators: {
                              stringLength: {
                              min: 2,
                          },
                              notEmpty: {
                              message: 'Please supply your first name'
                          }
                      }
                  },
                   last_name: {
                      validators: {
                           stringLength: {
                              min: 2,
                          },
                          notEmpty: {
                              message: 'Please supply your last name'
                          }
                      }
                  },
                  email: {
                      validators: {
                          notEmpty: {
                              message: 'Please supply your email address'
                          },
                          emailAddress: {
                              message: 'Please supply a valid email address'
                          }
                      }
                  },
                  phone: {
                      validators: {
                          notEmpty: {
                              message: 'Please supply your phone number'
                          },
                          phone: {
                              country: 'US',
                              message: 'Please supply a vaild phone number with area code'
                          }
                      }
                  },
                  comment: {
                      validators: {
                            stringLength: {
                              min: 10,
                              max: 200,
                              message:'Please enter at least 10 characters and no more than 200'
                          },
                          notEmpty: {
                              message: 'Please describe your legal need or inquiry'
                          }
                          }
                      }
                  }
              })
              .on('success.form.bv', function(e) {
                  $('#success_message').slideDown({ opacity: "show" }, "slow") // Do something ...
                      $('#contact_form').data('bootstrapValidator').resetForm();

                  // Prevent form submission
                  e.preventDefault();

                  // Get the form instance
                  var $form = $(e.target);

                  // Get the BootstrapValidator instance
                  var bv = $form.data('bootstrapValidator');

                  phone=$( "input[name='phone']" )[0].value;
                  email=$( "input[name='email']" )[0].value;
                  fn=$( "input[name='first_name']" )[0].value;
                  ln=$( "input[name='last_name']" )[0].value;
                  comment=$( "textarea[name='comment']" )[0].value;
                  transfer_form(fn, ln, email, phone, comment);

                  // Use Ajax to submit form data
                  //$.post($form.attr('action'), $form.serialize(), function(result) {
                  //    console.log(result);
                  //}, 'json');

        });
        var transfer_form = function(first_name, last_name, email, phone, description) {

            $("#Field3")[0].value=email
            $("#Field5")[0].value=description
            $("#Field7")[0].value=first_name
            $("#Field8")[0].value=last_name
            $("#Field9")[0].value=phone
            console.log($("#Field3")[0].value)
            console.log($("#Field5")[0].value)
            console.log($("#Field7")[0].value)
            console.log($("#Field8")[0].value)
            console.log($("#Field9")[0].value)
            submit_and_return = function(event){ 
              $( "#form1" )[0].submit();
              console.log('Inquiry Submitted')
              setTimeout(function() {window.location.replace('Confirmation.html')}, 250);
            };
            submit_and_return();

        };
    });


</script>
{% endblock %}